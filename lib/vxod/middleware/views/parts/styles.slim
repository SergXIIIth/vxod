sass:
  .vxod-registration
    .vxod-login-btn-wrap
      margin-top: 10px

  .vxod-container
    height: 530px
    padding-top: 30px

    [type="checkbox"]
      margin-right: 5px

    .vxod-well
      width: 400px
      margin: 0 auto

    .vxod-reg-option
      margin-left: 70px
      color: #ccc
      margin-bottom: 6px

      label
        font-weight: normal

    .vxod-login-option
      margin-top: -30px
      color: #ccc

      a
        color: #ccc
        margin-left: 18px
        font-style: italic

      label
        display: block
        font-weight: normal
        margin: 0

    .vxod-login-btn-wrap
      text-align: right

    .vxod-emailpass-wrap
      padding: 0 35px
      position: relative

    .vxod-form-group
      margin-bottom: 10px

      label
        display: inline-block
        font-weight: normal
        min-width: 70px

      input
        display: inline-block
        width: 260px
        right: 0
        position: relative

        &::-webkit-input-placeholder
          color: #ccc

    .vxod-nav
      border-bottom: 1px solid #ddd
      text-align: right

      a
        position: relative
        display: inline-block
        padding: 10px 15px
        margin-right: 2px
        line-height: 1.42857143
        border: 1px solid transparent
        border-radius: 4px 4px 0 0

        &.active
          color: #555
          cursor: default
          background-color: #fff
          border: 1px solid #ddd
          border-bottom-color: transparent
          top: 1px

    .vxod-login-with
      text-align: center
      margin: 30px 0 0 0
      padding-bottom: 50px

      .vxod-label
        margin-bottom: 10px
        font-weight: bold

      .vxod-btn
        width: 100px
        margin-right: 10px

    .vxod-or-label
      border-bottom: 1px solid #ddd
      color: #ddd
      text-align: center
      margin-bottom: 30px

      span
        position: absolute
        margin-top: -10px
        background-color: #fff
        padding: 0 20px

    .vxod-btn
      display: inline-block
      margin-bottom: 0
      font-weight: normal
      text-align: center
      vertical-align: middle
      border: 1px solid #ccc
      white-space: nowrap
      padding: 6px 12px
      font-size: 14px
      line-height: 1.42857
      border-radius: 4px
      color: #333
      background-color: #fff

      &:hover
        color: #333
        background-color: #e6e6e6
        border-color: #adadad
        text-decoration: none

sass:
  .vxod
    &-container
      max-height: 630px
      padding: 30px 0
      background-color: #ddd

      [type="checkbox"]
        margin-right: 5px

    &-registration, &-login
      padding-bottom: 50px

      .vxod-emailpass-wrap
        padding-bottom: 10px

      .vxod-login-btn-wrap
        margin-top: 10px

    &-errors
      color: #a94442
      background-color: #f2dede
      border-color: #ebccd1
      padding: 15px
      margin-bottom: 20px
      border: 1px solid transparent
      border-radius: 4px

      p:last-child
        margin-bottom: 0

    &-well
      border: 1px solid #ccc
      width: 432px
      margin: 0 auto
      background-color: #fff
      padding: 15px
      border-radius: 4px

    &-nav
      width: 432px
      margin: 0 auto
      text-align: right
      position: relative
      top: 2px

      a
        display: inline-block
        padding: 10px 15px
        line-height: 1.42857143
        border: 1px solid transparent
        border-radius: 4px 4px 0 0

        &.active
          color: #555
          cursor: default
          background-color: #fff
          border: 1px solid #ccc
          border-bottom-color: transparent


    &-reg-option
      margin-left: 70px
      color: #ccc
      margin-bottom: 6px

      label
        font-weight: normal

    &-login-option
      margin-top: -30px
      margin-left: 70px
      color: #ccc

      a
        color: #ccc
        margin-left: 18px
        font-style: italic
        text-decoration: underline

      label
        display: block
        font-weight: normal
        margin: 0

    &-login-btn-wrap
      text-align: right

    &-emailpass-wrap
      padding: 0 35px
      position: relative

    &-form-group
      margin-bottom: 10px

      label
        display: inline-block
        font-weight: normal
        min-width: 70px

      input
        display: inline-block
        width: 260px
        right: 0
        position: relative

        &::-webkit-input-placeholder
          color: #ccc
        &:-moz-placeholder
          color: #ccc
        &::-moz-placeholder
          color: #ccc
        &:-ms-input-placeholder
          color: #ccc

    &-login-with
      text-align: center
      margin: 20px 0 40px 0

      .vxod-label
        margin-bottom: 10px
        font-weight: bold

      .vxod-btn
        width: 100px
        margin-right: 10px

    &-or-label
      border-bottom: 1px solid #ddd
      color: #ddd
      text-align: center
      margin-bottom: 30px

      span
        position: absolute
        margin-top: -10px
        background-color: #fff
        padding: 0 20px

    &-btn, &-btn-primary
      display: inline-block
      margin-bottom: 0
      font-weight: normal
      text-align: center
      vertical-align: middle
      border: 1px solid #ccc
      white-space: nowrap
      padding: 6px 12px
      font-size: 14px
      line-height: 1.42857
      border-radius: 4px
      color: #333
      background-color: #fff

      &:hover
        color: #333
        background-color: #e6e6e6
        border-color: #adadad
        text-decoration: none

    &-btn-primary
      color: #fff
      background-color: #428bca
      border-color: #357ebd

      &:hover
        color: #fff
        background-color: #3071a9
        border-color: #285e8e
